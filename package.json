{
	"name": "toggle-comments",
	"displayName": "Toggle Comments",
  	"publisher": "ArturoDent",
	"description": "Toggle comments line-by-line in a selection(s)",
  	"license": "MIT",
	"version": "0.1.0",
	"main": "./src/extension.js",
	"engines": {
		"vscode": "^1.52.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:toggle-comments.toggleLineComments"
	],
	"contributes": {
		"commands": [
			{
				"command": "toggle-comments.toggleLineComments",
				"title": "Toggle Line Comments By Line in a Selection"
			}
		],
		"keybindings": [
			{
				"command": "toggle-comments.toggleLineComments",
				"key": "ctrl+alt+/",
				"mac": "cmd+alt+/",
				"when": "editorTextFocus && editorHasSelection"
			}
		]
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.52.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	}
}
